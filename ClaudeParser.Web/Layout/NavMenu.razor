<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">ClaudeParser Playground</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="nav flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="calculator">
                <span class="bi bi-calculator-fill-nav-menu" aria-hidden="true"></span> Calculator
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="csv">
                <span class="bi bi-table-nav-menu" aria-hidden="true"></span> CSV Parser
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="json">
                <span class="bi bi-braces-nav-menu" aria-hidden="true"></span> JSON Parser
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="regex">
                <span class="bi bi-regex-nav-menu" aria-hidden="true"></span> Regex Parser
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="sql">
                <span class="bi bi-database-nav-menu" aria-hidden="true"></span> SQL Parser
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
